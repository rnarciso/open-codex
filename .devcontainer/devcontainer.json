{
  "name": "Codex",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "platform": "linux/arm64"
  },

  /* Force VS Code to run the container as arm64 in
     case your host is x86 (or vice-versa). */
  "runArgs": ["--platform=linux/arm64"],

  "containerEnv": {
    "RUST_BACKTRACE": "1",
    "CARGO_TARGET_DIR": "${containerWorkspaceFolder}/codex-rs/target-arm64"
  },

  "remoteUser": "ubuntu",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": ["rust-lang.rust-analyzer", "tamasfe.even-better-toml"]
    }
  }, "features": { "ghcr.io/devcontainers/features/common-utils:2": { "installZsh": "false", "username": "coder", "userUid": "1000", "userGid": "1000" }, "ghcr.io/devcontainers/features/node:1": { "version": "lts", "nodeGypDependencies": true }, "ghcr.io/devcontainers/features/python:1": { "installJupyterlab": false, "version": "3.11" }, "ghcr.io/devcontainers/features/docker-in-docker:1": { "version": "latest", "enableBuildx": true, "moby": true }, "ghcr.io/devcontainers/features/sshd:1": { "version": "latest" }, "ghcr.io/devcontainers/features/package-manager:1": { "enableApt": true, "version": "latest" } }
}
